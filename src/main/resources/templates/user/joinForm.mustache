    }

    function valid() {
        if (usernameSameCheck) {
            return true;
        } else {
            return false;
        }
    }

    async function check() {
        let username = { username: document.querySelector("#username").value };

        console.log(username)

        let response = await fetch("/api/user/join", {
            method: "post",
            headers: {
